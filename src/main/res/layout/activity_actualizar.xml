<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActualizarActivity">

    <EditText
        android:id="@+id/edt_ave_visualizada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="aveVisualizada"
        android:inputType="text"
        ></EditText>
    <EditText
        android:id="@+id/edt_fecha"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="fecha"
        android:inputType="text"

        ></EditText>
    <EditText
        android:id="@+id/edt_numero_vistas"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="numero_vistas"
        android:lines="3"
        android:inputType="number"

        ></EditText>
    <EditText
        android:id="@+id/edt_lugar_exacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="lugar_exacto"
        android:lines="3"
        ></EditText>

    <Button
        android:id="@+id/btn_actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        ></Button>
    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        ></Button>

</LinearLayout>
